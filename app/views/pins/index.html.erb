<h1>My Pins</h1>
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <div class= "form-group">
  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= pin.user.email if pin.user %></td>
        <td><%= link_to 'Show', pin, class: "btn btn-primary btn-sm" %></td>
        <% if pin.user == current_user %>
          <td><%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-sm" %></td>
          <td><%= link_to 'Destroy', pin, class: "btn btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
  </div>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Pin', new_pin_path, class: "btn btn-primary" %>
<%end%>
</div>